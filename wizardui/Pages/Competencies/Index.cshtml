@page
@model wizardui.Pages.Competency.IndexModel
@{
    ViewData["Title"] = "Competencies";
    int count = 0;
}

<h1>Competencies</h1>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var competency in Model.CompetencyList)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@competency.Name</td>
                    <td>@competency.Description</td>
                </tr>
                { count++; }
            }
        </tbody>
    </table>